{% comment %}
  Renders a header drawer menu for mobile and desktop.

  Usage:
  {% render 'header-drawer' %}
{% endcomment %}

<header-drawer data-breakpoint="{% if section.settings.menu_type_desktop == 'drawer' %}desktop{% else %}tablet{% endif %}">
  <details id="Details-menu-drawer-container" class="menu-drawer-container premium-menu-drawer-container">
    <summary
      class="header__icon header__icon--menu header__icon--summary link focus-inset premium-menu-toggle"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <span class="premium-menu-toggle__inner">
        <span class="premium-menu-toggle__icon">
          {{- 'icon-hamburger.svg' | inline_asset_content -}}
          {{- 'icon-close.svg' | inline_asset_content -}}
        </span>
        <span class="premium-menu-toggle__label">
          {{ 'sections.header.menu' | t | upcase }}
        </span>
      </span>
    </summary>

    <div
      id="menu-drawer"
      class="gradient menu-drawer premium-menu-drawer motion-reduce color-{{ section.settings.menu_color_scheme }}"
    >
      <div class="menu-drawer__inner-container premium-menu-drawer__inner">
        <!-- Top row: logo / store name -->
        <div class="premium-menu-drawer__header">
          <a href="{{ routes.root_url }}" class="premium-menu-drawer__brand">
            {{ shop.name }}
          </a>
        </div>

        <div class="menu-drawer__navigation-container premium-menu-drawer__nav-container">
          <nav class="menu-drawer__navigation premium-menu-drawer__nav">
            <ul class="menu-drawer__menu has-submenu list-menu premium-menu-drawer__menu" role="list">
              {%- for link in section.settings.menu.links -%}
                <li class="premium-menu-drawer__item">
                  {%- if link.links != blank -%}
                    <details id="Details-menu-drawer-menu-item-{{ forloop.index }}" class="premium-menu-drawer__details">
                      <summary
                        id="HeaderDrawer-{{ link.handle }}"
                        class="menu-drawer__menu-item list-menu__item link link--text focus-inset premium-menu-drawer__link{% if link.child_active %} menu-drawer__menu-item--active{% endif %}"
                      >
                        <span class="premium-menu-drawer__link-label">
                          {{ link.title | escape }}
                        </span>
                        <span class="premium-menu-drawer__chevron svg-wrapper">
                          {{- 'icon-caret.svg' | inline_asset_content -}}
                        </span>
                      </summary>

                      <div
                        id="link-{{ link.handle | escape }}"
                        class="menu-drawer__submenu has-submenu gradient motion-reduce premium-menu-drawer__submenu"
                        tabindex="-1"
                      >
                        <div class="menu-drawer__inner-submenu premium-menu-drawer__inner-submenu">
                          <button
                            class="menu-drawer__close-button link link--text focus-inset premium-menu-drawer__back"
                            aria-expanded="true"
                          >
                            <span class="svg-wrapper premium-menu-drawer__back-icon">
                              {{- 'icon-arrow.svg' | inline_asset_content -}}
                            </span>
                            <span class="premium-menu-drawer__back-label">
                              {{ link.title | escape }}
                            </span>
                          </button>

                          <ul class="menu-drawer__menu list-menu premium-menu-drawer__submenu-list" role="list" tabindex="-1">
                            {%- for childlink in link.links -%}
                              <li class="premium-menu-drawer__submenu-item">
                                {%- if childlink.links == blank -%}
                                  <a
                                    id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                    href="{{ childlink.url }}"
                                    class="menu-drawer__menu-item link link--text list-menu__item focus-inset premium-menu-drawer__link--child{% if childlink.current %} menu-drawer__menu-item--active{% endif %}"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink.title | escape }}
                                  </a>
                                {%- else -%}
                                  <details
                                    id="Details-menu-drawer-{{ link.handle }}-{{ childlink.handle }}"
                                    class="premium-menu-drawer__details premium-menu-drawer__details--nested"
                                  >
                                    <summary
                                      id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                      class="menu-drawer__menu-item link link--text list-menu__item focus-inset premium-menu-drawer__link premium-menu-drawer__link--child"
                                    >
                                      <span class="premium-menu-drawer__link-label">
                                        {{ childlink.title | escape }}
                                      </span>
                                      <span class="premium-menu-drawer__chevron svg-wrapper">
                                        {{- 'icon-caret.svg' | inline_asset_content -}}
                                      </span>
                                    </summary>

                                    <div
                                      id="childlink-{{ childlink.handle | escape }}"
                                      class="menu-drawer__submenu has-submenu gradient motion-reduce premium-menu-drawer__submenu premium-menu-drawer__submenu--nested"
                                    >
                                      <button
                                        class="menu-drawer__close-button link link--text focus-inset premium-menu-drawer__back"
                                        aria-expanded="true"
                                      >
                                        <span class="svg-wrapper premium-menu-drawer__back-icon">
                                          {{- 'icon-arrow.svg' | inline_asset_content -}}
                                        </span>
                                        <span class="premium-menu-drawer__back-label">
                                          {{ childlink.title | escape }}
                                        </span>
                                      </button>

                                      <ul class="menu-drawer__menu list-menu premium-menu-drawer__submenu-list" role="list" tabindex="-1">
                                        {%- for grandchildlink in childlink.links -%}
                                          <li class="premium-menu-drawer__submenu-item">
                                            <a
                                              id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                              href="{{ grandchildlink.url }}"
                                              class="menu-drawer__menu-item link link--text list-menu__item focus-inset premium-menu-drawer__link--grandchild{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"
                                              {% if grandchildlink.current %}
                                                aria-current="page"
                                              {% endif %}
                                            >
                                              {{ grandchildlink.title | escape }}
                                            </a>
                                          </li>
                                        {%- endfor -%}
                                      </ul>
                                    </div>
                                  </details>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </div>
                    </details>
                  {%- else -%}
                    <a
                      id="HeaderDrawer-{{ link.handle }}"
                      href="{{ link.url }}"
                      class="menu-drawer__menu-item list-menu__item link link--text focus-inset premium-menu-drawer__link{% if link.current %} menu-drawer__menu-item--active{% endif %}"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ link.title | escape }}
                    </a>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </nav>

          <div class="menu-drawer__utility-links premium-menu-drawer__utility">
            {%- if shop.customer_accounts_enabled -%}
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="menu-drawer__account link focus-inset h5 medium-hide large-up-hide premium-menu-drawer__account"
                rel="nofollow"
              >
                {%- if section.settings.enable_customer_avatar -%}
                  <account-icon>
                    {%- if customer and customer.has_avatar? -%}
                      {{ customer | avatar }}
                    {%- else -%}
                      <span class="svg-wrapper premium-menu-drawer__account-icon">
                        {{- 'icon-account.svg' | inline_asset_content -}}
                      </span>
                    {%- endif -%}
                  </account-icon>
                {%- else -%}
                  <span class="svg-wrapper premium-menu-drawer__account-icon">
                    {{- 'icon-account.svg' | inline_asset_content -}}
                  </span>
                {%- endif -%}
                <span class="premium-menu-drawer__account-label">
                  {%- liquid
                    if customer
                      echo 'customer.account_fallback' | t
                    else
                      echo 'customer.log_in' | t
                    endif
                  -%}
                </span>
              </a>
            {%- endif -%}

            {%- if localization.available_countries or localization.available_languages -%}
              <div class="menu-drawer__localization header-localization premium-menu-drawer__localization">
                {%- if localization.available_countries and localization.available_countries.size > 1 -%}
                  <localization-form>
                    {%- form 'localization', id: 'HeaderCountryMobileForm', class: 'localization-form' -%}
                      <div>
                        <h2 class="visually-hidden" id="HeaderCountryMobileLabel">
                          {{ 'localization.country_label' | t }}
                        </h2>
                        {%- render 'country-localization', localPosition: 'HeaderCountryMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {% endif %}

                {%- if localization.available_languages and localization.available_languages.size > 1 -%}
                  <localization-form>
                    {%- form 'localization', id: 'HeaderLanguageMobileForm', class: 'localization-form' -%}
                      <div>
                        <h2 class="visually-hidden" id="HeaderLanguageMobileLabel">
                          {{ 'localization.language_label' | t }}
                        </h2>
                        {%- render 'language-localization', localPosition: 'HeaderLanguageMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {%- endif -%}
              </div>
            {%- endif -%}

            <ul class="list list-social list-unstyled premium-menu-drawer__social" role="list">
              {%- if settings.social_twitter_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_twitter_link }}" class="list-social__link link premium-menu-drawer__social-link">
                    <span class="svg-wrapper">
                      {{- 'icon-twitter.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_facebook_link }}" class="list-social__link link premium-menu-drawer__social-link">
                    <span class="svg-wrapper">
                      {{- 'icon-facebook.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_pinterest_link }}" class="list-social__link link premium-menu-drawer__social-link">
                    <span class="svg-wrapper">
                      {{- 'icon-pinterest.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_instagram_link }}" class="list-social__link link premium-menu-drawer__social-link">
                    <span class="svg-wrapper">
                      {{- 'icon-instagram.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_tiktok_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_tiktok_link }}" class="list-social__link link premium-menu-drawer__social-link">
                    <span class="svg-wrapper">
                      {{- 'icon-tiktok.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_youtube_link }}" class="list-social__link link premium-menu-drawer__social-link">
                    <span class="svg-wrapper">
                      {{- 'icon-youtube.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </details>
</header-drawer>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Close button (X)
    document.querySelectorAll('.menu-drawer__close-icon').forEach(function (btn) {
      btn.addEventListener('click', function () {
        var details = btn.closest('.menu-drawer-container');
        if (details) details.removeAttribute('open');
      });
    });

    // "Back" buttons inside submenus (go one level up)
    document.querySelectorAll('.menu-drawer__back').forEach(function (btn) {
      btn.addEventListener('click', function () {
        var group = btn.closest('details.menu-drawer__group');
        if (group) group.removeAttribute('open');
      });
    });
  });
</script>