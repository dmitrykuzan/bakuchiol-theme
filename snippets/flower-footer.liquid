{% comment %}
  Footer Flower Section
  Shows a tall bakuchiol flower centered above the footer.
{% endcomment %}

<section class="footer-flower">
  <div class="footer-flower__inner page-width">
    <div class="footer-flower__image-wrapper">
      <img
        src="{{ section.settings.flower_image | image_url: width: 1200 }}"
        loading="lazy"
        alt="Bakuchiol flower stem used as a gentle plant-derived skincare active"
        class="footer-flower__image"
      >
    </div>
  </div>
</section>

<style>
.footer-flower {
  width: 100%;
  background-color: #ffffff;
  padding-top: 3rem;
  padding-bottom: 2rem;
}

.footer-flower__inner {
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.footer-flower__image-wrapper {
  position: relative;
  max-width: 260px;
  width: 100%;
}

.footer-flower__image {
  display: block;
  width: 100%;
  height: auto;
  object-fit: contain;
}

@media (min-width: 992px) {
  .footer-flower {
    padding-top: 4rem;
    padding-bottom: 0;
    margin-bottom: -2rem;
  }

  .footer-flower__image-wrapper {
    max-width: 320px;
  }
}

@media (max-width: 767px) {
  .footer-flower {
    padding-top: 2rem;
    padding-bottom: 1rem;
  }

  .footer-flower__image-wrapper {
    max-width: 200px;
  }
}
</style>