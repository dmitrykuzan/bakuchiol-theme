{% if product and product.handle == 'bakuchiol-age-delay-serum' %}
  {% assign sticky_variant = product.selected_or_first_available_variant %}

  {% if sticky_variant.available %}
    {% assign compare_price = sticky_variant.compare_at_price %}
    {% assign current_price = sticky_variant.price %}

    {% if compare_price > current_price %}
      {% assign savings = compare_price | minus: current_price %}
      {% assign savings_pct = savings | times: 100 | divided_by: compare_price | floor %}
    {% endif %}

    <div id="bakuchiol-sticky-atc" class="sticky-atc" aria-hidden="true">
      <div class="sticky-atc__inner page-width">
        <div class="sticky-atc__left">
          <div class="sticky-atc__thumb">
            {{ product.featured_image | image_url: width: 240 | image_tag: loading: 'lazy', alt: product.title }}
          </div>

          <div class="sticky-atc__info">
            <p class="sticky-atc__title">
              {{ product.title }}
            </p>

            <div class="sticky-atc__meta">
              <span class="sticky-atc__price">
                {{ current_price | money }}
              </span>

              {% if compare_price > current_price %}
                <span class="sticky-atc__price--compare">
                  {{ compare_price | money }}
                </span>

                {% if savings_pct > 0 %}
                  <span class="sticky-atc__badge">
                    SAVE {{ savings_pct }}%
                  </span>
                {% endif %}
              {% endif %}
            </div>
          </div>
        </div>

        <button
          type="button"
          class="sticky-atc__button js-sticky-atc-add"
        >
          Add to cart
        </button>
      </div>
    </div>
  {% endif %}
{% endif %}

<style>
    /* Sticky ATC bar â€“ Bakuchiol */

.sticky-atc {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.25s ease-out;
  background: linear-gradient(to top, #f3f1ee, #ffffff);
  border-top: 1px solid #e2ddd7;
}

.sticky-atc--visible {
  transform: translateY(0);
}

.sticky-atc__inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.5rem;
  padding: 0.75rem 0;
}

.sticky-atc__left {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  min-width: 0;
}

.sticky-atc__thumb {
  flex-shrink: 0;
  width: 52px;
}

.sticky-atc__thumb img {
  display: block;
  width: 100%;
  height: auto;
}

.sticky-atc__info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  min-width: 0;
}

.sticky-atc__title {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 700;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sticky-atc__meta {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.sticky-atc__price {
  font-weight: 700;
  font-size: 1.425rem;
}

.sticky-atc__price--compare {
  font-size: 1.425rem;
  text-decoration: line-through;
  opacity: 0.6;
}

.sticky-atc__badge {
  font-size: 1.25rem;
  font-weight: 700;
  text-transform: uppercase;
  padding: 0.2rem 0.55rem;
  border-radius: 999px;
  background-color: #5b4836;
  color: #fff;
  letter-spacing: 0.08em;
}

/* Minimal black button like screenshot */
.sticky-atc__button {
  flex-shrink: 0;
  background-color: #000000 !important;
  color: #ffffff !important;
  border: none;
  border-radius: 0; /* Square corners like screenshot */
  padding: 0.85rem 2.2rem;
  
  font-size: 1.5rem;
  font-weight: 600;
  text-transform: none;
  letter-spacing: 0.02em;

  cursor: pointer;
  white-space: nowrap;
  box-shadow: none !important; /* Clean look */
  transition: opacity 0.15s ease-in-out;
}

/* Optional hover (matches premium minimal design) */
.sticky-atc__button:hover {
  opacity: 0.8;
}

/* Mobile tweaks */
@media (max-width: 749px) {
  .sticky-atc__inner {
    gap: 0.75rem;
  }

  .sticky-atc__title {
    font-size: 0.9rem;
  }

  .sticky-atc__button {
    padding: 0.6rem 1.4rem;
    font-size: 0.9rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var bar = document.getElementById('bakuchiol-sticky-atc');
  if (!bar) return;

  // Try to find the main product add-to-cart button on the page
  var mainAtc =
    document.querySelector('form[action^="/cart/add"] .product-form__submit') ||
    document.querySelector('.product-form__submit');

  if (!mainAtc) return;

  var button = bar.querySelector('.js-sticky-atc-add');

  // Show bar only when main ATC is out of viewport
  function toggleBar() {
    var rect = mainAtc.getBoundingClientRect();
    var outOfView = rect.bottom < 0 || rect.top > window.innerHeight;

    if (outOfView) {
      bar.classList.add('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'false');
    } else {
      bar.classList.remove('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'true');
    }
  }

  window.addEventListener('scroll', toggleBar);
  window.addEventListener('resize', toggleBar);
  toggleBar();

  // When sticky button clicked, just trigger the main ATC button
  button.addEventListener('click', function () {
    mainAtc.click();
  });
});
</script>