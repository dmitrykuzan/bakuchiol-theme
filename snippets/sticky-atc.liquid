{% if product and product.handle == 'bakuchiol-age-delay-serum' %}
  {% assign sticky_variant = product.selected_or_first_available_variant %}

  {% if sticky_variant.available %}
    {% assign compare_price = sticky_variant.compare_at_price %}
    {% assign current_price = sticky_variant.price %}

    {% if compare_price > current_price %}
      {% assign savings = compare_price | minus: current_price %}
      {% assign savings_pct = savings | times: 100 | divided_by: compare_price | floor %}
    {% endif %}

    <div id="bakuchiol-sticky-atc" class="sticky-atc" aria-hidden="true">
      <div class="page-width sticky-atc__outer">
        <div class="sticky-atc__inner">
          <div class="sticky-atc__left">
            <div class="sticky-atc__thumb">
              {{ product.featured_image | image_url: width: 240 | image_tag: loading: 'lazy', alt: product.title }}
            </div>

            <div class="sticky-atc__info">
              <!-- Rating row -->
              <div class="sticky-atc__rating">
                <span class="sticky-atc__stars">★★★★★</span>
                <span class="sticky-atc__rating-text">
                  Excellent <strong>4.8</strong> | 482+ reviews
                </span>
              </div>

              <p class="sticky-atc__title">
                {{ product.title }}
              </p>

              <div class="sticky-atc__meta">
                <span class="sticky-atc__price">
                  {{ current_price | money }}
                </span>

                {% if compare_price > current_price %}
                  <span class="sticky-atc__price--compare">
                    {{ compare_price | money }}
                  </span>

                  {% if savings_pct > 0 %}
                    <span class="sticky-atc__badge">
                      SAVE {{ savings_pct }}%
                    </span>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          </div>

          <button
            type="button"
            class="sticky-atc__button js-sticky-atc-add"
          >
            Add to cart
          </button>
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}

<style>
/* ===== Sticky ATC – layout & spacing ===== */

.sticky-atc__outer {
  padding: 0.9rem 1.25rem; /* more side padding */
  background: linear-gradient(to top, #f3f1ee, #ffffff);
  border-top: 1px solid #e2ddd7;
}

.sticky-atc__inner {
  pointer-events: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2rem;
  padding: 1rem 0;
}

/* ===== Left side ===== */

.sticky-atc__left {
  display: flex;
  align-items: center;
  gap: 1.2rem; /* more spacing */
}

.sticky-atc__thumb {
  flex-shrink: 0;
  width: 78px;        /* bigger */
  height: 78px;
  background: #f5f2ee;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sticky-atc__thumb img {
  width: 100%;
  height: auto;
}

/* ===== Text + Ratings ===== */

.sticky-atc__rating {
  display: flex;
  align-items: center;
  gap: 0.55rem;
  font-size: 1.1rem;         /* bigger */
}

.sticky-atc__stars {
  color: #cbbfe2;
  font-size: 1.35rem;        /* bigger stars */
  letter-spacing: 0.12em;
}

.sticky-atc__rating-text {
  color: #252347;
  font-size: 1.05rem;        /* increased */
}

.sticky-atc__title {
  margin: 0;
  font-size: 1.35rem;        /* bigger title */
  font-weight: 700;
  line-height: 1.3;
  max-width: 18rem;          /* avoid wrapping */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sticky-atc__meta {
  display: flex;
  align-items: center;
  gap: 0.7rem;
}

.sticky-atc__price {
  font-size: 1.25rem;        /* bigger price */
  font-weight: 700;
}

.sticky-atc__price--compare {
  font-size: 1.15rem;
}

/* ===== Discount badge ===== */

.sticky-atc__badge {
  font-size: 0.95rem;
  font-weight: 700;
  padding: 0.22rem 0.55rem;
  letter-spacing: 0.1em;
  background: #5b4836;
  color: #fff;
}

/* ===== Add to Cart Button – MUCH BIGGER ===== */

.sticky-atc__button {
  background-color: #cbbfe2 !important;
  color: #fff !important;
  border: none;
  border-radius: 0;

  padding: 1.4rem 3.8rem;    /* HUGE button */
  margin-right: 0.75rem;     /* spaced off right */

  font-size: 1.55rem;        /* larger text */
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 0.15em;

  cursor: pointer;
  box-shadow: none;
  transition: opacity 0.2s ease-in-out;
}

.sticky-atc__button:hover {
  opacity: 0.85;
}

.sticky-atc__button:active {
  opacity: 0.75;
}

/* ===== Responsive ===== */

@media (max-width: 900px) {

  .sticky-atc__outer {
    padding: 0.75rem 1rem;
  }

  .sticky-atc__thumb {
    width: 64px;
    height: 64px;
  }

  .sticky-atc__title {
    font-size: 1.15rem;
  }

  .sticky-atc__rating {
    font-size: 1rem;
  }

  .sticky-atc__button {
    padding: 1rem 2.2rem;
    font-size: 1.25rem;
    margin-right: 0.5rem;
  }
}

@media (max-width: 600px) {
  .sticky-atc__title {
    max-width: 12rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var bar = document.getElementById('bakuchiol-sticky-atc');
  if (!bar) return;

  var mainAtc =
    document.querySelector('form[action^="/cart/add"] .product-form__submit') ||
    document.querySelector('.product-form__submit');

  if (!mainAtc) return;

  var button = bar.querySelector('.js-sticky-atc-add');

  function toggleBar() {
    var rect = mainAtc.getBoundingClientRect();
    var outOfView = rect.bottom < 0 || rect.top > window.innerHeight;

    if (outOfView) {
      bar.classList.add('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'false');
    } else {
      bar.classList.remove('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'true');
    }
  }

  window.addEventListener('scroll', toggleBar);
  window.addEventListener('resize', toggleBar);
  toggleBar();

  button.addEventListener('click', function () {
    mainAtc.click();
  });
});
</script>