{% if product and product.handle == 'bakuchiol-age-delay-serum' %}
  {% assign sticky_variant = product.selected_or_first_available_variant %}

  {% if sticky_variant.available %}
    {% assign compare_price = sticky_variant.compare_at_price %}
    {% assign current_price = sticky_variant.price %}

    {% if compare_price > current_price %}
      {% assign savings = compare_price | minus: current_price %}
      {% assign savings_pct = savings | times: 100 | divided_by: compare_price | floor %}
    {% endif %}

    <div id="bakuchiol-sticky-atc" class="sticky-atc" aria-hidden="true">
      <div class="page-width sticky-atc__outer">
        <div class="sticky-atc__inner">
          <div class="sticky-atc__left">
            <div class="sticky-atc__thumb">
              {{ product.featured_image | image_url: width: 240 | image_tag: loading: 'lazy', alt: product.title }}
            </div>

            <div class="sticky-atc__info">
              <p class="sticky-atc__title">
                {{ product.title }}
              </p>

              <div class="sticky-atc__meta">
                <span class="sticky-atc__price">
                  {{ current_price | money }}
                </span>

                {% if compare_price > current_price %}
                  <span class="sticky-atc__price--compare">
                    {{ compare_price | money }}
                  </span>

                  {% if savings_pct > 0 %}
                    <span class="sticky-atc__badge">
                      SAVE {{ savings_pct }}%
                    </span>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          </div>

          <button
            type="button"
            class="sticky-atc__button js-sticky-atc-add"
          >
            Add to cart
          </button>
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}

<style>
/* ===== Sticky ATC – layout & container ===== */

.sticky-atc {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.25s ease-out;
  pointer-events: none; /* card inside handles clicks */
}

.sticky-atc--visible {
  transform: translateY(0);
}

.sticky-atc__outer {
  padding: 0.65rem 0.75rem 0.9rem;
}

.sticky-atc__inner {
  pointer-events: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.75rem;
  padding: 0.9rem 1.4rem;
  border-radius: 999px;
  background: linear-gradient(to right, #ffffff, #faf6f2);
  box-shadow: 0 14px 40px rgba(0, 0, 0, 0.12);
}

/* ===== Left side (image + text) ===== */

.sticky-atc__left {
  display: flex;
  align-items: center;
  gap: 0.9rem;
  min-width: 0;
}

.sticky-atc__thumb {
  flex-shrink: 0;
  width: 70px;
  height: 70px;
  border-radius: 18px;
  overflow: hidden;
  background: #f5f2ee;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sticky-atc__thumb img {
  display: block;
  width: 100%;
  height: auto;
}

.sticky-atc__info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  min-width: 0;
}

.sticky-atc__title {
  margin: 0;
  font-size: 1.3rem;
  font-weight: 700;
  line-height: 1.25;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sticky-atc__meta {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  flex-wrap: wrap;
}

.sticky-atc__price {
  font-weight: 700;
  font-size: 1.2rem;
}

.sticky-atc__price--compare {
  font-size: 1.1rem;
  text-decoration: line-through;
  opacity: 0.55;
}

.sticky-atc__badge {
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  padding: 0.2rem 0.6rem;
  border-radius: 999px;
  background-color: #f3c9ad;
  color: #4b3422;
  letter-spacing: 0.12em;
}

/* ===== Button – styled like “CHOOSE YOUR BUNDLE” pill ===== */

.sticky-atc__button {
  flex-shrink: 0;
  border: none;
  cursor: pointer;

  padding: 1rem 3.1rem;
  border-radius: 999px;

  background: linear-gradient(90deg, #f05289, #f3447b);
  color: #ffffff;

  font-size: 1.1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.13em;

  white-space: nowrap;
  box-shadow: 0 10px 24px rgba(240, 82, 137, 0.5);
  transition: transform 0.12s ease, box-shadow 0.12s ease, opacity 0.12s ease;
}

.sticky-atc__button:hover {
  transform: translateY(-1px);
  box-shadow: 0 14px 30px rgba(240, 82, 137, 0.6);
  opacity: 0.96;
}

.sticky-atc__button:active {
  transform: translateY(1px);
  box-shadow: 0 6px 16px rgba(240, 82, 137, 0.45);
}

/* ===== Responsive tweaks ===== */

@media (max-width: 900px) {
  .sticky-atc__inner {
    padding: 0.8rem 1.1rem;
    gap: 1.1rem;
  }

  .sticky-atc__thumb {
    width: 60px;
    height: 60px;
  }

  .sticky-atc__title {
    font-size: 1rem;
  }

  .sticky-atc__price {
    font-size: 1rem;
  }

  .sticky-atc__button {
    padding: 0.8rem 1.8rem;
    font-size: 0.9rem;
    letter-spacing: 0.12em;
  }
}

@media (max-width: 600px) {
  .sticky-atc__outer {
    padding-inline: 0.5rem;
  }

  .sticky-atc__inner {
    border-radius: 18px;
  }

  .sticky-atc__title {
    max-width: 11rem;
  }

  .sticky-atc__button {
    padding: 0.7rem 1.5rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var bar = document.getElementById('bakuchiol-sticky-atc');
  if (!bar) return;

  // Find main product ATC button
  var mainAtc =
    document.querySelector('form[action^="/cart/add"] .product-form__submit') ||
    document.querySelector('.product-form__submit');

  if (!mainAtc) return;

  var button = bar.querySelector('.js-sticky-atc-add');

  function toggleBar() {
    var rect = mainAtc.getBoundingClientRect();
    var outOfView = rect.bottom < 0 || rect.top > window.innerHeight;

    if (outOfView) {
      bar.classList.add('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'false');
    } else {
      bar.classList.remove('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'true');
    }
  }

  window.addEventListener('scroll', toggleBar);
  window.addEventListener('resize', toggleBar);
  toggleBar();

  // Click sticky button -> trigger main ATC
  button.addEventListener('click', function () {
    mainAtc.click();
  });
});
</script>