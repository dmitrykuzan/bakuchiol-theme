{% if product and product.handle == 'bakuchiol-age-delay-serum' %}
  {% assign sticky_variant = product.selected_or_first_available_variant %}

  {% if sticky_variant.available %}
    {% assign compare_price = sticky_variant.compare_at_price %}
    {% assign current_price = sticky_variant.price %}

    {% if compare_price > current_price %}
      {% assign savings = compare_price | minus: current_price %}
      {% assign savings_pct = savings | times: 100 | divided_by: compare_price | floor %}
    {% endif %}

    <div id="bakuchiol-sticky-atc" class="sticky-atc" aria-hidden="true">
      <div class="page-width sticky-atc__outer">
        <div class="sticky-atc__inner">
          <div class="sticky-atc__left">
            <div class="sticky-atc__thumb">
              {{ product.featured_image | image_url: width: 240 | image_tag: loading: 'lazy', alt: product.title }}
            </div>

            <div class="sticky-atc__info">
              <!-- Rating row -->
              <div class="sticky-atc__rating">
                <span class="sticky-atc__stars">★★★★★</span>
                <span class="sticky-atc__rating-text">
                  Excellent <strong>4.8</strong> | 482+ reviews
                </span>
              </div>

              <p class="sticky-atc__title">
                {{ product.title }}
              </p>

              <div class="sticky-atc__meta">
                <span class="sticky-atc__price">
                  {{ current_price | money }}
                </span>

                {% if compare_price > current_price %}
                  <span class="sticky-atc__price--compare">
                    {{ compare_price | money }}
                  </span>

                  {% if savings_pct > 0 %}
                    <span class="sticky-atc__badge">
                      SAVE {{ savings_pct }}%
                    </span>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          </div>

          <button
            type="button"
            class="sticky-atc__button js-sticky-atc-add"
          >
            Add to cart
          </button>
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}

<style>

  /* ===== Sticky ATC – visibility & container ===== */

.sticky-atc {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.25s ease-out;
  pointer-events: none;
}

.sticky-atc--visible {
  transform: translateY(0);
}

.sticky-atc__outer {
  padding: 1rem 1.5rem; /* more side padding */
  background: linear-gradient(to top, #f3f1ee, #ffffff);
  border-top: 1px solid #e2ddd7;
}

.sticky-atc__inner {
  pointer-events: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 2.25rem;
  padding: 1rem 0;
}

/* ===== Left side (image + info) ===== */

.sticky-atc__left {
  display: flex;
  align-items: center;
  gap: 1.25rem;
  min-width: 0;
}

.sticky-atc__thumb {
  width: 82px;        /* bigger image */
  height: 82px;
  background: #f5f2ee;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.sticky-atc__thumb img {
  width: 100%;
  height: auto;
}

/* ===== Text content ===== */

.sticky-atc__info {
  display: flex;
  flex-direction: column;
  gap: 0.35rem;
  min-width: 0;
}

/* Ratings */

.sticky-atc__rating {
  display: flex;
  align-items: center;
  gap: 0.6rem;
}

.sticky-atc__stars {
  color: #cbbfe2;
  font-size: 1.45rem;          /* bigger stars */
  letter-spacing: 0.12em;
}

.sticky-atc__rating-text {
  color: #252347;
  font-size: 1.15rem;          /* larger rating text */
}

.sticky-atc__rating-text strong {
  font-weight: 700;
}

/* Title */

.sticky-atc__title {
  margin: 0;
  font-size: 1.45rem;          /* bigger product name */
  font-weight: 700;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Price row */

.sticky-atc__meta {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.sticky-atc__price {
  font-size: 1.35rem;          /* bigger price */
  font-weight: 700;
}

.sticky-atc__price--compare {
  font-size: 1.2rem;
  opacity: 0.6;
  text-decoration: line-through;
}

.sticky-atc__badge {
  background-color: #5b4836;
  color: #fff;
  font-size: 1rem;
  padding: 0.2rem 0.5rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

/* ===== Add to Cart Button ===== */

.sticky-atc__button {
  background-color: #cbbfe2 !important;
  color: #ffffff !important;
  border: none;
  border-radius: 0;

  padding: 1.6rem 4.4rem;    /* huge premium button */
  margin-right: 1.25rem;     /* pushed off right nicely */

  font-size: 1.85rem;        /* bigger ATC text */
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: 0.17em;

  white-space: nowrap;
  cursor: pointer;
  box-shadow: none;
  transition: opacity 0.2s ease;
}

.sticky-atc__button:hover {
  opacity: 0.85;
}

.sticky-atc__button:active {
  opacity: 0.75;
}

/* ===== Responsive ===== */

@media (max-width: 900px) {
  .sticky-atc__outer {
    padding: 0.85rem 1rem;
  }

  .sticky-atc__thumb {
    width: 70px;
    height: 70px;
  }

  .sticky-atc__title {
    font-size: 1.25rem;
  }

  .sticky-atc__stars {
    font-size: 1.25rem;
  }

  .sticky-atc__rating-text {
    font-size: 1rem;
  }

  .sticky-atc__button {
    padding: 1.2rem 3rem;
    font-size: 1.4rem;
    margin-right: 0.5rem;
  }
}

@media (max-width: 600px) {
  .sticky-atc__title {
    max-width: 13rem;
  }
}

</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var bar = document.getElementById('bakuchiol-sticky-atc');
  if (!bar) return;

  var mainAtc =
    document.querySelector('form[action^="/cart/add"] .product-form__submit') ||
    document.querySelector('.product-form__submit');

  if (!mainAtc) return;

  var button = bar.querySelector('.js-sticky-atc-add');

  function toggleBar() {
    var rect = mainAtc.getBoundingClientRect();
    var outOfView = rect.bottom < 0 || rect.top > window.innerHeight;

    if (outOfView) {
      bar.classList.add('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'false');
    } else {
      bar.classList.remove('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'true');
    }
  }

  window.addEventListener('scroll', toggleBar);
  window.addEventListener('resize', toggleBar);
  toggleBar();

  button.addEventListener('click', function () {
    mainAtc.click();
  });
});
</script>