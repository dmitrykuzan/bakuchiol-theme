{% if product and product.handle == 'bakuchiol-age-delay-serum' %}
  {% assign sticky_variant = product.selected_or_first_available_variant %}

  {% if sticky_variant.available %}
    {% assign compare_price = sticky_variant.compare_at_price %}
    {% assign current_price = sticky_variant.price %}

    {% if compare_price > current_price %}
      {% assign savings = compare_price | minus: current_price %}
      {% assign savings_pct = savings | times: 100 | divided_by: compare_price | floor %}
    {% endif %}

    <div id="bakuchiol-sticky-atc" class="sticky-atc" aria-hidden="true">
      <div class="page-width sticky-atc__outer">
        <div class="sticky-atc__inner">
          <div class="sticky-atc__left">
            <div class="sticky-atc__thumb">
              {{ product.featured_image | image_url: width: 240 | image_tag: loading: 'lazy', alt: product.title }}
            </div>

            <div class="sticky-atc__info">
              <!-- Rating row -->
              <div class="sticky-atc__rating">
                <span class="sticky-atc__stars">★★★★★</span>
                <span class="sticky-atc__rating-text">
                  Excellent <strong>4.8</strong> | 482+ reviews
                </span>
              </div>

              <p class="sticky-atc__title">
                {{ product.title }}
              </p>

              <div class="sticky-atc__meta">
                <span class="sticky-atc__price">
                  {{ current_price | money }}
                </span>

                {% if compare_price > current_price %}
                  <span class="sticky-atc__price--compare">
                    {{ compare_price | money }}
                  </span>

                  {% if savings_pct > 0 %}
                    <span class="sticky-atc__badge">
                      SAVE {{ savings_pct }}%
                    </span>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          </div>

          <button
            type="button"
            class="sticky-atc__button js-sticky-atc-add"
          >
            Add to cart
          </button>
        </div>
      </div>
    </div>
  {% endif %}
{% endif %}

<style>
/* ===== Sticky ATC – layout & container (square, no rounding) ===== */

.sticky-atc {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  transform: translateY(100%);
  transition: transform 0.25s ease-out;
  pointer-events: none;
}

.sticky-atc--visible {
  transform: translateY(0);
}

.sticky-atc__outer {
  padding: 0.4rem 0;
  background: linear-gradient(to top, #f3f1ee, #ffffff);
  border-top: 1px solid #e2ddd7;
}

.sticky-atc__inner {
  pointer-events: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.75rem;
  padding: 0.8rem 0;
  border-radius: 0;
}

/* ===== Left side (image + text) ===== */

.sticky-atc__left {
  display: flex;
  align-items: center;
  gap: 0.9rem;
  min-width: 0;
}

.sticky-atc__thumb {
  flex-shrink: 0;
  width: 65px;
  height: 65px;
  border-radius: 0;
  overflow: hidden;
  background: #f5f2ee;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sticky-atc__thumb img {
  display: block;
  width: 100%;
  height: auto;
}

/* Info area */

.sticky-atc__info {
  display: flex;
  flex-direction: column;
  gap: 0.2rem;
  min-width: 0;
}

/* Rating row like reference screenshot */

.sticky-atc__rating {
  display: flex;
  align-items: center;
  gap: 0.45rem;
  font-size: 0.9rem;
  line-height: 1.2;
}

.sticky-atc__stars {
  color: #ffc6df; /* soft pink stars */
  letter-spacing: 0.1em;
  font-size: 1.05rem;
}

.sticky-atc__rating-text {
  color: #252347; /* deep navy */
}

.sticky-atc__rating-text strong {
  font-weight: 700;
}

.sticky-atc__title {
  margin: 0;
  font-size: 1.15rem;
  font-weight: 700;
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sticky-atc__meta {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  flex-wrap: wrap;
}

.sticky-atc__price {
  font-weight: 700;
  font-size: 1.05rem;
}

.sticky-atc__price--compare {
  font-size: 1rem;
  text-decoration: line-through;
  opacity: 0.6;
}

.sticky-atc__badge {
  font-size: 0.8rem;
  font-weight: 700;
  text-transform: uppercase;
  padding: 0.1rem 0.45rem;
  border-radius: 0;
  background-color: #5b4836;
  color: #fff;
  letter-spacing: 0.08em;
}

/* ===== Button – square, pastel lilac (#cbbfe2) ===== */

.sticky-atc__button {
  flex-shrink: 0;
  border: none;
  cursor: pointer;

  background-color: #cbbfe2 !important;
  color: #ffffff !important;
  background-image: none !important;

  padding: 0.9rem 2.6rem;
  border-radius: 0;

  font-size: 1rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.13em;

  white-space: nowrap;
  box-shadow: none;
  transition: opacity 0.15s ease-in-out;
}

.sticky-atc__button:hover {
  opacity: 0.85;
}

.sticky-atc__button:active {
  opacity: 0.75;
}

/* ===== Responsive tweaks ===== */

@media (max-width: 900px) {
  .sticky-atc__inner {
    gap: 1rem;
  }

  .sticky-atc__thumb {
    width: 58px;
    height: 58px;
  }

  .sticky-atc__title {
    font-size: 1rem;
  }

  .sticky-atc__rating {
    font-size: 0.8rem;
  }

  .sticky-atc__button {
    padding: 0.7rem 1.7rem;
    font-size: 0.85rem;
  }
}

@media (max-width: 600px) {
  .sticky-atc__outer {
    padding-inline: 0.75rem;
  }

  .sticky-atc__title {
    max-width: 11rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var bar = document.getElementById('bakuchiol-sticky-atc');
  if (!bar) return;

  var mainAtc =
    document.querySelector('form[action^="/cart/add"] .product-form__submit') ||
    document.querySelector('.product-form__submit');

  if (!mainAtc) return;

  var button = bar.querySelector('.js-sticky-atc-add');

  function toggleBar() {
    var rect = mainAtc.getBoundingClientRect();
    var outOfView = rect.bottom < 0 || rect.top > window.innerHeight;

    if (outOfView) {
      bar.classList.add('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'false');
    } else {
      bar.classList.remove('sticky-atc--visible');
      bar.setAttribute('aria-hidden', 'true');
    }
  }

  window.addEventListener('scroll', toggleBar);
  window.addEventListener('resize', toggleBar);
  toggleBar();

  button.addEventListener('click', function () {
    mainAtc.click();
  });
});
</script>