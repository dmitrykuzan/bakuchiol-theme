<style>
/* =====================================
   BAKUCHIOL PURPLE GRADIENT ANNOUNCEMENT
   ===================================== */

.purple-announcement__bar {
  width: 100%;
  padding: 0.9rem 1.75rem;

  /* New gradient: deep purple -> bakuchiol lavender */
  background: linear-gradient(
    90deg,
    #5a3b8c,
    #8d6fd1,
    #cbbfe2
  );
  background-size: 250% 250%;
  animation: purpleShift 12s ease infinite;

  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.75rem;
}

@keyframes purpleShift {
  0%   { background-position: 0% 50%; }
  50%  { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* TEXT */
.purple-announcement__text {
  color: #1d1440;              /* Deep night purple */
  font-size: 1.25rem;
  font-weight: 800;
  letter-spacing: 0.08em;
  white-space: nowrap;
  text-transform: uppercase;
}

/* COUNTDOWN */
.purple-announcement__countdown {
  display: flex;
  align-items: center;
  gap: 0.55rem;
}

.purple-announcement__item {
  background-color: #ffffff;
  padding: 5px 12px;
  border-radius: 6px;
  text-align: center;

  display: flex;
  flex-direction: column;
  align-items: center;
}

/* COUNTDOWN NUMBERS */
.time {
  font-size: 1.2rem;
  font-weight: 800;
  color: #0d0628;
  line-height: 1;
}

.label {
  font-size: 0.65rem;
  margin-top: 2px;
  color: #1d1440;
  letter-spacing: 0.07em;
}

/* SEPARATOR */
