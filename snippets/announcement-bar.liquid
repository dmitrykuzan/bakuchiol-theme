<section class="purple-announcement">
  <div class="purple-announcement__bar">
    <div class="purple-announcement__text">
      <strong>{{ section.settings.heading }}</strong>
    </div>

    <div class="purple-announcement__countdown" data-timer>
      <div class="purple-announcement__item">
        <span class="time hours">03</span>
        <span class="label">HRS</span>
      </div>
      <span class="separator">:</span>

      <div class="purple-announcement__item">
        <span class="time minutes">54</span>
        <span class="label">MIN</span>
      </div>
      <span class="separator">:</span>

      <div class="purple-announcement__item">
        <span class="time seconds">28</span>
        <span class="label">SEC</span>
      </div>
    </div>
  </div>
</section>

<style>
/* ================================
   Darker Purple Black Friday Banner
   ================================ */

.purple-announcement {
  width: 100%;
  margin: 0;
  padding: 0;
}

.purple-announcement__bar {
  width: 100%;
  padding: 0.8rem 1.75rem;

  /* Richer purple gradient, very little white */
  background: linear-gradient(
    90deg,
    #3b2a57,
    #5b3f86,
    #8a6cc0,
    #cbbfe2
  );
  background-size: 250% 250%;
  animation: purpleGradient 14s ease infinite;

  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.75rem;
}

@keyframes purpleGradient {
  0%   { background-position: 0% 50%; }
  50%  { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

/* TEXT (BLACK FRIDAY LABEL) */
.purple-announcement__text {
  color: #fdfdff;
  font-size: 1.2rem;         /* bigger */
  font-weight: 800;
  letter-spacing: 0.08em;
  white-space: nowrap;
  text-transform: uppercase;
}

/* COUNTDOWN */
.purple-announcement__countdown {
  display: flex;
  align-items: center;
  gap: 0.55rem;
}

.purple-announcement__item {
  background-color: #ffffff;
  padding: 4px 10px;
  border-radius: 4px;
  text-align: center;

  display: flex;
  flex-direction: column;
  align-items: center;
}

.time {
  font-size: 1.1rem;         /* bigger */
  font-weight: 800;
  color: #262254;
  line-height: 1;
}

.label {
  font-size: 0.65rem;        /* a bit bigger */
  margin-top: 2px;
  color: #262254;
  letter-spacing: 0.08em;
}

.separator {
  font-size: 1.2rem;
  font-weight: 800;
  color: #ffffff;
}

/* MOBILE */
@media (max-width: 600px) {
  .purple-announcement__bar {
    flex-direction: column;
    gap: 0.35rem;
    padding: 0.75rem 1rem;
  }

  .purple-announcement__text {
    font-size: 1rem;
    text-align: center;
  }

  .time {
    font-size: 0.95rem;
  }

  .label {
    font-size: 0.55rem;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  var countdown = document.querySelector('.purple-announcement__countdown');
  if (!countdown) return;

  var hoursEl   = countdown.querySelector('.hours');
  var minutesEl = countdown.querySelector('.minutes');
  var secondsEl = countdown.querySelector('.seconds');

  var FOUR_HOURS_MS = 4 * 60 * 60 * 1000;
  var endTime = Date.now() + FOUR_HOURS_MS;

  function resetEndTime() {
    endTime = Date.now() + FOUR_HOURS_MS;
  }

  function updateTimer() {
    var now = Date.now();
    var distance = endTime - now;

    // When it hits 0 or below, start a new 4-hour window
    if (distance <= 0) {
      resetEndTime();
      distance = endTime - now;
    }

    var totalSeconds = Math.floor(distance / 1000);
    var hours   = Math.floor(totalSeconds / 3600);
    var minutes = Math.floor((totalSeconds % 3600) / 60);
    var seconds = totalSeconds % 60;

    hoursEl.textContent   = ('0' + hours).slice(-2);
    minutesEl.textContent = ('0' + minutes).slice(-2);
    secondsEl.textContent = ('0' + seconds).slice(-2);
  }

  updateTimer();
  setInterval(updateTimer, 1000);
});
</script>