<script>
/* ============================================
   4-HOUR REPEATING COUNTDOWN TIMER (UTC-BASED)
   ============================================ */

document.addEventListener('DOMContentLoaded', function () {
  var countdown = document.querySelector('.purple-announcement__countdown');
  if (!countdown) return;

  var hoursEl   = countdown.querySelector('.hours');
  var minutesEl = countdown.querySelector('.minutes');
  var secondsEl = countdown.querySelector('.seconds');

  var FOUR_HOURS_MS = 4 * 60 * 60 * 1000;

  // Fixed UTC start time (from data attribute)
  var startAttr = countdown.getAttribute('data-start-utc');
  var startMs = Date.parse(startAttr);

  // Fallback: if invalid, start now (still UTC-based epoch)
  if (isNaN(startMs)) {
    startMs = Date.now();
  }

  function updateTimer() {
    var now = Date.now(); // milliseconds since epoch (UTC-based)
    var elapsed = now - startMs;
    if (elapsed < 0) elapsed = 0;

    // How many full 4-hour cycles have passed
    var cyclesCompleted = Math.floor(elapsed / FOUR_HOURS_MS);

    // End of the current cycle
    var currentCycleEnd = startMs + (cyclesCompleted + 1) * FOUR_HOURS_MS;
    var distance = currentCycleEnd - now;
    if (distance < 0) distance = 0;

    var totalSeconds = Math.floor(distance / 1000);
    var hours   = Math.floor(totalSeconds / 3600);
    var minutes = Math.floor((totalSeconds % 3600) / 60);
    var seconds = totalSeconds % 60;

    hoursEl.textContent   = ('0' + hours).slice(-2);
    minutesEl.textContent = ('0' + minutes).slice(-2);
    secondsEl.textContent = ('0' + seconds).slice(-2);
  }

  updateTimer();
  setInterval(updateTimer, 1000);
});
</script>