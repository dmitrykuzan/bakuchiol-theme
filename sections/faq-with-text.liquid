{{ 'faq-with-text.css' | asset_url | stylesheet_tag }}

<div class="faq-with-text page-width">
  <div class="faq-with-text__wrapper">

    <div class="faq-with-text__header-inline">
      <h2 class="faq-with-text__title">ANY QUESTIONS?</h2>
      <p class="faq-with-text__subtitle">
        Your most common questions about our age delay serum â€” answered simply and clearly.
      </p>
    </div>

    <ul class="faq">
      {% for block in section.blocks %}
        <li class="faq__item" {{ block.shopify_attributes }}>
          <h3 class="faq__item-title">{{ block.settings.title }}</h3>
          <div class="faq__item-text">
            <div class="faq__item-text-wrapper">
              {{ block.settings.text }}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>

  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document.querySelectorAll(".faq__item-title").forEach((title) => {
      title.addEventListener("click", () => {
        title.parentElement.classList.toggle("active");
      });
    });
  });
</script>

{% schema %}
{
  "name": "FAQ Section (with text)",
  "tag": "section",
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "FAQ Section (with text)",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "title": "WHAT IS BAKUCHIOL?"
          }
        }
      ]
    }
  ]
}
{% endschema %}