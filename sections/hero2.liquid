/* =========================================
   GLOBAL TYPE HELPERS (reuse everywhere)
========================================= */

.baku-kicker {
  font-size: 11px;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  font-weight: 600;
  color: var(--volu-primary-soft);
  margin: 0 0 12px;
}

.baku-heading-xl {
  font-size: 42px;
  line-height: 1.05;
  letter-spacing: 0.03em;
  font-weight: 700;
  text-transform: uppercase;
  color: var(--volu-primary);
  margin: 0 0 16px;
}

.baku-heading-display {
  font-size: 52px;
  line-height: 1.05;
  letter-spacing: 0.03em;
  font-weight: 700;
  text-transform: uppercase;
  color: var(--volu-primary);
  margin: 0;
}

.baku-heading-display span {
  display: block;
  color: var(--volu-primary-soft);
}

.baku-price-line {
  font-size: 20px;
  letter-spacing: 0.12em;
  text-transform: uppercase;
  font-weight: 600;
  color: var(--volu-primary);
  margin: 0 0 18px;
}

.baku-body {
  font-size: 15px;
  line-height: 1.7;
  color: #3a3844;
  max-width: 520px;
  margin: 0 0 28px;
}

.baku-body-large {
  font-size: 16px;
  line-height: 1.8;
  color: #3a3844;
  max-width: 520px;
  margin: 0 0 28px;
}

/* Tight, squared buttons specifically in these sections */
.baku-section__button {
  border-radius: 0 !important;
  padding: 15px 56px;
  font-size: 13px;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  font-weight: 700;
}

/* =========================================
   BASE SECTION WRAPPER
========================================= */

.baku-section {
  padding: 72px 0;
  background-color: #ffffff;
  border-top: 1px solid rgba(26, 21, 47, 0.06);
}

.baku-section__inner {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 64px;
}

/* =========================================
   PRODUCT DETAIL SPLIT SECTION
========================================= */

.baku-section--product {
  background: #f8f7fc;
}

.baku-section--product .baku-section__inner {
  align-items: center;
}

/* big bottle left */
.baku-section__media {
  flex: 0 0 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.baku-section__media img {
  width: 100%;
  max-width: 520px;
  height: auto;
  display: block;
  border-radius: 0;
  box-shadow: none;
}

/* copy right */
.baku-section__content {
  flex: 0 0 50%;
}

/* =========================================
   “LET’S BUILD…” STATEMENT SPLIT SECTION
========================================= */

.baku-section--statement {
  background: #f3f2f7;
}

.baku-section__inner--split {
  align-items: flex-start;
}

.baku-section__statement {
  flex: 0 0 55%;
}

.baku-section__copy {
  flex: 0 0 45%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.baku-section__button--right {
  margin-top: 8px;
}

/* =========================================
   DESKTOP / LARGE SCREENS
========================================= */

@media (min-width: 1200px) {
  .baku-section--product {
    padding-top: 80px;
    padding-bottom: 80px;
  }

  .baku-section--statement {
    padding-top: 88px;
    padding-bottom: 88px;
  }
}

/* =========================================
   TABLET
========================================= */

@media (max-width: 1024px) {
  .baku-section {
    padding: 56px 0;
  }

  .baku-section__inner {
    flex-direction: column;
    gap: 40px;
  }

  .baku-section__media,
  .baku-section__content,
  .baku-section__statement,
  .baku-section__copy {
    flex: 1 1 100%;
  }

  .baku-section__media img {
    max-width: 440px;
  }

  .baku-heading-xl {
    font-size: 34px;
  }

  .baku-heading-display {
    font-size: 40px;
  }

  .baku-section__button {
    padding-inline: 40px;
  }
}

/* =========================================
   MOBILE
========================================= */

@media (max-width: 720px) {
  .baku-section {
    padding: 44px 0;
  }

  .baku-section__inner {
    gap: 32px;
  }

  .baku-section--product .baku-section__inner {
    flex-direction: column-reverse; /* text first, image second */
  }

  .baku-section__media {
    justify-content: center;
  }

  .baku-section__media img {
    max-width: 360px;
  }

  .baku-heading-xl {
    font-size: 28px;
  }

  .baku-heading-display {
    font-size: 32px;
  }

  .baku-body,
  .baku-body-large {
    font-size: 14px;
  }

  .baku-section__button {
    width: 100%;
    text-align: center;
    justify-content: center;
    padding-block: 14px;
  }
}
