{% comment %}
BAKUCHIOL HERO – CLINICALLY STUDIED
Paste inside your product template or as a section.
Assumes `product` is the Bakuchiol serum.
{% endcomment %}

<section class="baku-hero">
  <div class="page-width baku-hero__inner">
    <!-- LEFT: TEXT CONTENT -->
    <div class="baku-hero__content">
      <!-- Rating line -->
      <div class="baku-hero__rating">
        <span class="baku-hero__stars">★★★★★</span>
        <span class="baku-hero__rating-text">
          <strong>4.8/5</strong> based on <strong>1,482+</strong> reviews
        </span>
      </div>

      <!-- Headline -->
      <h1 class="baku-hero__headline">
        Clinically Studied
        <span>Bakuchiol Age-Delay Serum</span>
      </h1>

      <!-- Subcopy -->
      <p class="baku-hero__subcopy">
        A science-backed bakuchiol serum that visibly softens fine lines, boosts radiance, 
        and supports a calm, balanced complexion without the irritation of traditional retinol.
      </p>

      <!-- Benefit bullets -->
      <ul class="baku-hero__benefits">
        <li>
          <span class="baku-hero__icon"></span>
          Softens fine lines + wrinkles
        </li>
        <li>
          <span class="baku-hero__icon"></span>
          Boosts luminosity + even tone
        </li>
        <li>
          <span class="baku-hero__icon"></span>
          Gentle enough for nightly use
        </li>
      </ul>

      <!-- CTA + guarantee -->
      <div class="baku-hero__cta-row">
        <button
          type="button"
          class="button-custom baku-gradient baku-hero__cta"
          onclick="document.querySelector('form[action^=\"/cart/add\"] .product-form__submit')?.scrollIntoView({behavior:'smooth'})"
        >
          TRY IT RISK-FREE TODAY
        </button>

        <div class="baku-hero__guarantee">
          <span class="baku-hero__guarantee-icon">✓</span>
          <span>90-Day Money-Back Guarantee</span>
        </div>
      </div>
    </div>

    <!-- RIGHT: PRODUCT IMAGE (NO BORDER BOX) -->
    <div class="baku-hero__image">
      <img 
        src="{{ 'bakuchiol-bottle.png' | asset_url }}" 
        alt="Bakuchiol Age-Delay Serum Bottle"
        loading="eager"
      >
    </div>
  </div>
</section>

<style>
/* -----------------------------
   COLOR TOKENS (matches site)
------------------------------*/
:root {
  --volu-primary:       #1a152f;
  --volu-primary-soft:  #726a96;
  --volu-accent-soft:   #cbbfe2;
  --volu-bg-soft:       #f8f5ff;
  --volu-text-main:     #111111;
  --volu-text-muted:    #555555;
  --volu-light:         #ffffff;
}

/* -----------------------------
   HERO LAYOUT
------------------------------*/
.baku-hero {
  background: radial-gradient(circle at top left, #f3ecff 0%, #ffffff 55%, #f3ecff 100%);
  padding: 64px 0 72px;          /* slightly shorter overall */
  overflow: hidden;              /* trims any extra bottom bleed */
}

.baku-hero__inner {
  display: flex;
  align-items: flex-start;       /* lift content + bottle toward the header */
  justify-content: space-between;
  gap: 3.5rem;
}

/* LEFT COLUMN */
.baku-hero__content {
  flex: 1.1;
  max-width: 560px;
  padding-left: 3rem;            /* push text in from the left */
  margin-top: -10px;             /* move content a touch closer to header */
}

/* Rating line */
.baku-hero__rating {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  margin-bottom: 18px;
  font-size: 15px;
}

.baku-hero__stars {
  letter-spacing: 0.16em;
  font-size: 17px;
  color: #c5b2ff; /* soft lilac stars */
}

.baku-hero__rating-text {
  color: var(--volu-text-muted);
}

.baku-hero__rating-text strong {
  color: var(--volu-primary);
  font-weight: 700;
}

/* Headline */
.baku-hero__headline {
  font-size: 40px;
  line-height: 1.1;
  letter-spacing: 0.02em;
  margin: 0 0 14px;
  color: var(--volu-primary);
}

.baku-hero__headline span {
  display: block;
  color: #7c73a2; /* softer lavender for second line */
  font-weight: 700;
}

/* Subcopy */
.baku-hero__subcopy {
  margin: 0 0 24px;
  font-size: 16px;
  line-height: 1.6;
  color: var(--volu-text-muted);
}

/* Benefit bullets */
.baku-hero__benefits {
  list-style: none;
  padding: 0;
  margin: 0 0 28px;
  display: grid;
  grid-template-columns: 1fr;
  gap: 10px;
}

.baku-hero__benefits li {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  font-size: 15px;
  color: var(--volu-text-main);
}

.baku-hero__icon {
  width: 22px;
  height: 22px;
  border-radius: 999px;
  background: radial-gradient(circle at 30% 30%, #f3ecff 0%, #a38bff 80%);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.baku-hero__icon::after {
  content: "";
  width: 9px;
  height: 9px;
  border-radius: 999px;
  border: 2px solid #f9f7ff;
  box-shadow: 0 0 0 1px rgba(26, 21, 47, 0.06);
}

/* CTA row */
.baku-hero__cta-row {
  display: flex;
  flex-direction: column;
  gap: 10px;
  align-items: flex-start;
}

.baku-hero__cta {
  padding: 16px 40px;
  font-size: 15px;
}

/* Guarantee text */
.baku-hero__guarantee {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 13px;
  color: var(--volu-text-muted);
}

.baku-hero__guarantee-icon {
  width: 18px;
  height: 18px;
  border-radius: 999px;
  border: 1px solid rgba(26, 21, 47, 0.18);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 11px;
  color: var(--volu-primary);
}

/* RIGHT COLUMN – PRODUCT IMAGE (NO BOX) */
.baku-hero__image {
  flex: 0 0 auto;
  min-height: 540px;            /* reduced height so less empty bottom */
  display: flex;
  align-items: flex-start;      /* lift bottle upward */
  justify-content: center;

  background: none !important;
  border: none !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  padding: 0 !important;
  margin: -10px 2.5rem 0 0;     /* nudge bottle up and in */
}

.baku-hero__image img {
  max-height: 640px;           /* slightly shorter bottle */
  width: auto;
  height: auto;
  display: block;
}

/* -----------------------------
   RESPONSIVE
------------------------------*/
@media (max-width: 1024px) {
  .baku-hero {
    padding: 52px 0 64px;
  }

  .baku-hero__inner {
    flex-direction: column-reverse;
    gap: 32px;
  }

  .baku-hero__content {
    max-width: 100%;
    padding-left: 0;           /* reset left padding on tablet/mobile */
    margin-top: 0;
  }

  .baku-hero__image {
    min-height: 420px;
    margin: 0 auto 0;
    align-items: center;
  }

  .baku-hero__image img {
    max-height: 460px;
  }
}

@media (max-width: 720px) {
  .baku-hero__headline {
    font-size: 30px;
  }

  .baku-hero__benefits {
    gap: 8px;
  }

  .baku-hero__cta-row {
    width: 100%;
    align-items: stretch;
  }

  .baku-hero__cta {
    width: 100%;
    justify-content: center;
  }

  .baku-hero__image {
    min-height: 360px;
  }
}
</style>