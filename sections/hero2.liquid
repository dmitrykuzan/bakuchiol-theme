{% comment %}
BAKUCHIOL HERO – CLINICALLY STUDIED
{% endcomment %}

<section class="baku-hero">
  <div class="page-width baku-hero__inner">
    <!-- LEFT: TEXT CONTENT -->
    <div class="baku-hero__content">
      <!-- Rating line -->
      <div class="baku-hero__rating">
        <span class="baku-hero__stars">★★★★★</span>
        <span class="baku-hero__rating-text">
          <strong>4.8/5</strong> based on <strong>1,482+</strong> reviews
        </span>
      </div>

      <!-- Headline -->
      <h1 class="baku-hero__headline">
        Clinically Studied
        <span>Bakuchiol Age-Delay Serum</span>
      </h1>

      <!-- Subcopy -->
      <p class="baku-hero__subcopy">
        A science-backed bakuchiol serum that visibly softens fine lines, boosts
        radiance, and supports a calm, balanced complexion without the irritation
        of traditional retinol.
      </p>

      <!-- Benefit bullets -->
      <ul class="baku-hero__benefits">
        <li>
          <span class="baku-hero__icon"></span>
          Softens fine lines + wrinkles
        </li>
        <li>
          <span class="baku-hero__icon"></span>
          Boosts luminosity + even tone
        </li>
        <li>
          <span class="baku-hero__icon"></span>
          Gentle enough for nightly use
        </li>
      </ul>

      <!-- CTA + guarantee -->
      <div class="baku-hero__cta-row">
        <button
          type="button"
          class="button-custom baku-gradient baku-hero__cta"
          onclick="document.querySelector('form[action^=\"/cart/add\"] .product-form__submit')?.scrollIntoView({behavior:'smooth'})"
        >
          TRY IT RISK-FREE TODAY
        </button>

        <div class="baku-hero__guarantee">
          <span class="baku-hero__guarantee-icon">✓</span>
          <span>90-Day Money-Back Guarantee</span>
        </div>
      </div>
    </div>

    <!-- RIGHT: PRODUCT IMAGE -->
    <div class="baku-hero__image">
      <img
        src="{{ 'bakuchiol-bottle.png' | asset_url }}"
        alt="Bakuchiol Age-Delay Serum Bottle"
        loading="eager"
      >
    </div>
  </div>
</section>

<style>
:root {
  --volu-primary:       #1a152f;
  --volu-primary-soft:  #726a96;
  --volu-accent-soft:   #cbbfe2;
  --volu-bg-soft:       #f8f5ff;
  --volu-text-main:     #111111;
  --volu-text-muted:    #555555;
  --volu-light:         #ffffff;
}

/* -----------------------------
   HERO LAYOUT
------------------------------*/
.baku-hero {
  background: radial-gradient(circle at top left, #f3ecff 0%, #ffffff 55%, #f3ecff 100%);
  padding: 52px 0 48px; /* less space top & bottom on desktop */
}

.baku-hero__inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 3.5rem;
}

/* LEFT COLUMN */
.baku-hero__content {
  flex: 1.1;
  max-width: 560px;
}

/* Rating line */
.baku-hero__rating {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  margin-bottom: 14px; /* slightly tighter */
  font-size: 15px;
}

.baku-hero__stars {
  letter-spacing: 0.16em;
  font-size: 17px;
  color: #c5b2ff;
}

.baku-hero__rating-text {
  color: var(--volu-text-muted);
}

.baku-hero__rating-text strong {
  color: var(--volu-primary);
  font-weight: 700;
}

/* Headline */
.baku-hero__headline {
  font-size: 40px;
  line-height: 1.1;
  letter-spacing: 0.02em;
  margin: 0 0 12px;
  color: var(--volu-primary);
}

.baku-hero__headline span {
  display: block;
  color: #7c73a2;
  font-weight: 700;
}

/* Subcopy */
.baku-hero__subcopy {
  margin: 0 0 22px;
  font-size: 16px;
  line-height: 1.6;
  color: var(--volu-text-muted);
}

/* Benefit bullets */
.baku-hero__benefits {
  list-style: none;
  padding: 0;
  margin: 0 0 24px;
  display: grid;
  grid-template-columns: 1fr;
  gap: 9px;
}

.baku-hero__benefits li {
  display: flex;
  align-items: center;
  gap: 0.6rem;
  font-size: 15px;
  color: var(--volu-text-main);
}

.baku-hero__icon {
  width: 22px;
  height: 22px;
  border-radius: 999px;
  background: radial-gradient(circle at 30% 30%, #f3ecff 0%, #a38bff 80%);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.baku-hero__icon::after {
  content: "";
  width: 9px;
  height: 9px;
  border-radius: 999px;
  border: 2px solid #f9f7ff;
  box-shadow: 0 0 0 1px rgba(26, 21, 47, 0.06);
}

/* CTA row */
.baku-hero__cta-row {
  display: flex;
  flex-direction: column;
  gap: 9px;
  align-items: flex-start;
}

.baku-hero__cta {
  padding: 16px 40px;
  font-size: 15px;
}

/* Guarantee */
.baku-hero__guarantee {
  display: flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 13px;
  color: var(--volu-text-muted);
}

.baku-hero__guarantee-icon {
  width: 18px;
  height: 18px;
  border-radius: 999px;
  border: 1px solid rgba(26, 21, 47, 0.18);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 11px;
  color: var(--volu-primary);
}

/* RIGHT COLUMN – PRODUCT IMAGE */
.baku-hero__image {
  flex: 0 0 auto;
  display: flex;
  align-items: flex-start;  /* bottle sits higher */
  justify-content: center;
}

.baku-hero__image img {
  max-height: 720px;   /* bigger bottle desktop */
  width: auto;
  height: auto;
  display: block;
}

/* -----------------------------
   RESPONSIVE
------------------------------*/
@media (max-width: 1024px) {
  .baku-hero {
    padding: 40px 0 40px; /* less vertical space tablet/mobile */
  }

  .baku-hero__inner {
    flex-direction: column; /* stack */
    gap: 28px;
  }

  /* content first, image second on mobile */
  .baku-hero__content {
    order: 1;
    max-width: 100%;
  }

  .baku-hero__image {
    order: 2;
    align-items: center;
  }

  .baku-hero__image img {
    max-height: 440px;  /* smaller so less bottom blank space */
  }
}

@media (max-width: 720px) {
  .baku-hero {
    padding: 32px 0 32px; /* trim even more on small screens */
  }

  .baku-hero__headline {
    font-size: 30px;
  }

  .baku-hero__benefits {
    gap: 8px;
  }

  .baku-hero__cta-row {
    width: 100%;
    align-items: stretch;
  }

  .baku-hero__cta {
    width: 100%;
    justify-content: center;
  }

  .baku-hero__image img {
    max-height: 400px;
  }
}

/* ============================
   REMOVE EXCESS SPACE UNDER HERO
   ============================ */

/* Desktop – tightened bottom padding + image height */
.baku-hero {
  padding-bottom: 20px !important; /* was 48px */
}

.baku-hero__image img {
  max-height: 600px !important; /* was 720px */
  margin-bottom: -40px !important; /* pulls the bottle DOWN so you see more product, less empty space */
}

/* MOBILE — tighten even more */
@media (max-width: 720px) {
  .baku-hero {
    padding-bottom: 10px !important; /* very tight */
  }

  .baku-hero__image img {
    max-height: 340px !important; /* was 400px */
    margin-bottom: -30px !important;
  }
}

/* Tablet */
@media (max-width: 1024px) {
  .baku-hero__image img {
    max-height: 380px !important; 
    margin-bottom: -25px !important;
  }
}

/* MOBILE — increase bottle size by ~20% */
@media (max-width: 720px) {
  .baku-hero__image img {
    max-height: 410px !important;   /* was ~340px after tightening */
    margin-bottom: -35px !important; /* prevents excess white space */
  }
}
</style>