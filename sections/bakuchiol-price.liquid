{{ 'bakuchiol-price.css' | asset_url | stylesheet_tag }}

{% comment %}
  Grab the first configured product once so we can reuse it
{% endcomment %}
{% assign product = nil %}
{% for block in section.blocks %}
  {% if block.type == 'product' and block.settings.product != blank and product == nil %}
    {% assign product = all_products[block.settings.product] %}
  {% endif %}
{% endfor %}

<section class="bakuchiol-price">
  <div class="bakuchiol-price__inner page-width">
    <div class="bakuchiol-price__panel">

      <div class="bakuchiol-price__wrapper section-top">
        <!-- IMAGE -->
        <div class="bakuchiol-price__image">
          <img
            alt="Bakuchiol Age Delay Serum bottle with pricing comparison to clinical treatments"
            src="{{ 'bakuchiol-price.png' | asset_url }}"
            width="925"
            height="925"
            loading="lazy"
          >
        </div>

        <!-- COPY + PRICE -->
        <div class="bakuchiol-price__content">
          <div class="bakuchiol-price__content-top">
            <p class="bakuchiol-price__content-title">
              FOR ALL SKIN TYPES
            </p>

            <div class="bakuchiol-price__content-titles">
              <h2>BAKUCHIOL</h2>
              <h3>AGE DELAY SERUM</h3>
            </div>

            {% if product %}
              <div class="bakuchiol-price__content-price">
                <span class="product-price">
                  {{ product.price | money }}
                </span>

                {% if product.compare_at_price_max > product.price %}
                  <span class="product-compare-price">
                    {{ product.compare_at_price_max | money }}
                  </span>
                {% endif %}
              </div>
            {% endif %}
          </div>

          <div class="bakuchiol-price__content-bottom">
            <div class="bakuchiol-price__content-description">
              <p>
                A 1.0% pure bakuchiol serum that softens fine lines, smooths texture,
                and brightens dull tone&nbsp;— without the dryness of traditional retinoids.
                The lightweight, cushiony formula layers effortlessly under moisturizer or
                bakuchiol cream for gentle, luminous results.
              </p>
            </div>

            {% if product %}
              <a
                class="bakuchiol-price-link button-custom button-custom__black desktop-button"
                href="{{ product.url }}"
              >
                Buy Bakuchiol Serum
              </a>
            {% endif %}
          </div>
        </div>
      </div>

      {% if product %}
        <!-- Mobile CTA (inside card) -->
        <a
          class="bakuchiol-price-link button-custom button-custom__black mobile-button"
          href="{{ product.url }}"
        >
          Buy Bakuchiol Serum
        </a>
      {% endif %}

      <div class="bakuchiol-price__section-label">
        <span></span>
        <p>Your smooth, luminous skin starts here.</p>
      </div>
    </div>
  </div>
</section>

