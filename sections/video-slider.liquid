<section class="video-slider page-width section-melatonin" id="VideoSlider{{ section.id }}">
  <div class="video-slider__content-wrapper">
    <div class="video-slider__titles">
      <h2 class="video-slider__title section-title-bakuchiol">Unveil your glow with BAKUCHIOL FACE SERUM</h2>

        <div class="video-slider__actions">
          <div class="video-slider__section-lable bakuchiol__section-lable">
            <span></span>
